---
import { Image } from "astro:assets";
import Person1 from "../assets/person-1.png";
import Person2 from "../assets/person-2.png";
import Person3 from "../assets/person-3.png";
---

<div class="w-full flex items-center justify-center md:-translate-y-7 p-4">
  <div class="relative w-60 h-auto flex items-center justify-center">
    <!-- Left Image -->
    <Image loading="eager"
      class="hover:scale-95 transition-all duration-250 border-3 rounded-md border-green-800 absolute top-0 left-[90%] rotate-10 z-1 opacity-90 scale-90"
      src={Person2}
      alt="male disabled person thanking humdard-e-watan team for help"
    />

    <!-- Center Image -->
    <Image loading="eager"
      class="hover:scale-105 transition-all duration-250 border-3 rounded-md border-green-800 relative z-3 scale-100 shadow-xl"
      src={Person1}
      alt="female old person thanking humdard-e-watan team for wheelchair"
    />

    <!-- Right Image -->
    <Image loading="eager"
      class="hover:scale-95 transition-all duration-250 border-3 rounded-md border-green-800 absolute top-0 right-[90%] -rotate-10 z-1 opacity-90 scale-90"
      src={Person3}
      alt="male disabled person thanking humdard-e-watan team for wheelchair donation"
    />
  </div>
</div>
