<nav class="relative border-b border-b-base-content/20 p-5 z-50 bg-white">
  <div class="container mx-auto flex items-center justify-between">
    <!-- Left: Logo -->
    <div class="flex items-center flex-1">
      <a href="/" class="flex items-center gap-2">
        <h1
          style={`font-family: "EB Garamond"`}
          class="text-2xl font-bold whitespace-nowrap"
        >
          Humdard e Watan
        </h1>
      </a>
    </div>

    <!-- Center: Desktop Links -->
    <div class="hidden md:flex flex-1 justify-center gap-10 font-medium">
      <a class="hover:text-emerald-700 hover:link transition-colors" href="/"
        >Home</a
      >
      <a
        class="hover:text-emerald-700 hover:link transition-colors"
        href="/contact">Donate</a
      >
      <a
        class="hover:text-emerald-700 hover:link transition-colors"
        href="/#work">Our Work</a
      >
    </div>

    <!-- Right: Contact / Menu -->
    <div class="flex flex-1 justify-end">
      <a
        href="/contact"
        class="hidden md:inline-block py-2 px-5 rounded-full bg-green-800 text-white transition-all duration-200 hover:bg-emerald-800 active:scale-95 cursor-pointer"
      >
        Contact Us
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="menu-toggle"
        class="md:hidden flex justify-center items-center"
        aria-label="Toggle menu"
      >
        <span id="menu-icon">
          <!-- Menu SVG -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-menu"
          >
            <path d="M4 5h16"></path>
            <path d="M4 12h16"></path>
            <path d="M4 19h16"></path>
          </svg>
        </span>
      </button>
    </div>
  </div>

  <!-- Mobile Dropdown -->
  <div
    id="mobile-menu"
    class="hidden absolute top-full left-0 w-full bg-white border-t border-b border-base-content/10 flex-col items-center space-y-4 font-medium md:hidden pb-5 z-40"
  >
    <div class="flex flex-col py-5 gap-5 w-full px-5 mt-1">
      <a class="hover:text-emerald-700" href="/">Home</a>
      <a class="hover:text-emerald-700" href="/contact">Donate</a>
      <a class="hover:text-emerald-700" href="/#work">Our Work</a>
    </div>
    <div class="flex px-5 pb-3">
      <button
        class="py-2 px-5 rounded-full w-full bg-green-800 text-white transition-all duration-200 hover:bg-emerald-800 active:scale-95"
      >
        Contact Us
      </button>
    </div>
  </div>

  <!-- TypeScript Logic -->
  <script>
    const toggle = document.getElementById("menu-toggle") as HTMLButtonElement;
    const menu = document.getElementById("mobile-menu") as HTMLDivElement;
    const icon = document.getElementById("menu-icon") as HTMLSpanElement;

    const menuSvg = `
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" 
        viewBox="0 0 24 24" fill="none" stroke="currentColor" 
        stroke-width="2" stroke-linecap="round" stroke-linejoin="round" 
        class="lucide lucide-menu">
        <path d="M4 5h16"/>
        <path d="M4 12h16"/>
        <path d="M4 19h16"/>
      </svg>
    `;

    const closeSvg = `
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" 
        viewBox="0 0 24 24" fill="none" stroke="currentColor" 
        stroke-width="2" stroke-linecap="round" stroke-linejoin="round" 
        class="lucide lucide-x">
        <path d="M18 6 6 18"/>
        <path d="m6 6 12 12"/>
      </svg>
    `;

    let isOpen = false;

    toggle.addEventListener("click", () => {
      isOpen = !isOpen;
      menu.classList.toggle("hidden");
      icon.innerHTML = isOpen ? closeSvg : menuSvg;
    });

    // âœ… Close menu when a mobile link is clicked
    const mobileLinks = menu.querySelectorAll("a");
    mobileLinks.forEach((link) => {
      link.addEventListener("click", () => {
        menu.classList.add("hidden");
        icon.innerHTML = menuSvg;
        isOpen = false;
      });
    });
  </script>
</nav>
